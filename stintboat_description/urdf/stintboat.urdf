<?xml version="1.0"?>
<robot name="stintboat">

<!-- LINKS -->
<!-- Based on format described in: https://classic.gazebosim.org/tutorials?tut=ros_urdf  -->
<!-- Inertial and origin values where taken from the Fusion360 model. -->
  <link name="dummy_link">
  </link>

<!-- Hull (Material: CFRP) -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.834378010957274 1.8477869630653746e-05 0.43248878730351303" rpy="0 0 0"/>
      <mass value="204.15012580813698"/>
      <inertia ixx="6.489221" iyy="43.146389" izz="47.149571" ixy="-0.002075" iyz="-0.000481" ixz="0.793284"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/hull.stl"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/hull.stl"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

<!-- Mast (Material: Aluminum) -->
  <link name="mast_link">
    <inertial>
      <origin xyz="2.220446049250313e-16 -1.4210854715202004e-16 0.6499999999999995" rpy="0 0 0"/>
      <mass value="2.481072798172541"/>
      <inertia ixx="0.349557" iyy="0.349557" izz="0.000279" ixy="0.0" iyz="-0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/mast.stl"/>
      </geometry>
      <origin xyz="-0.957 -0.0 -0.5" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/mast.stl"/>
      </geometry>
      <origin xyz="-0.957 -0.0 -0.5" rpy="0 0 0"/>
    </collision>
  </link>

<!-- Sail (Material: CFRP) -->
  <link name="sail_link">
    <inertial>
      <origin xyz="-0.07216436064100828 1.7109174075776243e-14 -0.499999999999966" rpy="0 0 0"/>
      <mass value="17.798853424590863"/>
      <inertia ixx="1.485674" iyy="1.64434" izz="0.163538" ixy="0.0" iyz="0.0" ixz="-0.0"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/sail.stl"/>
      </geometry>
      <origin xyz="-0.957 -0.0 -1.8" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/sail.stl"/>
      </geometry>
      <origin xyz="-0.957 -0.0 -1.8" rpy="0 0 0"/>
    </collision>
  </link>

<!-- Pole (Material: Aluminum) -->
  <link name="pole_link">
    <inertial>
      <origin xyz="5.551115123125783e-17 0.0 -0.2499999999999999" rpy="0 0 0"/>  
      <mass value="0.10602875205865538"/>
      <inertia ixx="0.00221" iyy="0.00221" izz="1e-06" ixy="-0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>  
      <geometry>
        <mesh filename="package://stintboat_description/meshes/pole.stl"/>
      </geometry>
      <origin xyz="-0.25 -0.0 -0.5" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/pole.stl"/>
        <origin xyz="-0.25 -0.0 -0.5" rpy="0 0 0"/>
      </geometry>
    </collision>
  </link>

<!-- Rudder (Material:CFRP) -->
  <link name="rudder_link">
    <inertial>
      <origin xyz="-0.026752345062866556 -2.415845301584341e-15 0.15000000000000024" rpy="0 0 0"/>  
      <mass value="0.47077962067253687"/>
      <inertia ixx="0.003537" iyy="0.00391" izz="0.000385" ixy="0.0" iyz="-0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/rudder.stl"/>
      </geometry>
      <origin xyz="-0.25 -0.0 -0.0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://stintboat_description/meshes/rudder.stl"/>
      </geometry>
      <origin xyz="-0.25 -0.0 -0.0" rpy="0 0 0"/>
    </collision>
  </link>

<!-- Camera link -->
  <link name="camera_link">
    <collision>
      <origin xyz="0.00999 0.0 0.0182"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.00999 0.0 0.0182" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0.00999 0 0.0182" rpy="0.0 0.0 0.0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<!-- IMU link -->
  <link name="imu_link">
    <collision>
      <origin xyz="0.00800 0.0 0.05"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.00800 0.0 0.05" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0.00800 0.0 0.05" rpy="0.0 0.0 0.0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<!-- LINK MATERIALS -->
  <gazebo reference="base_link">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="mast_link">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="sail_link">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="pole_link">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="rudder_link">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="camera_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="imu_link">
    <material>Gazebo/Black</material>
  </gazebo>

<!-- JOINTS -->
<!-- Based on format described in: http://wiki.ros.org/urdf/XML/joint -->
  <joint name="dummy_joint" type="fixed">
    <parent link="dummy_link"/>
    <child link="base_link"/>
  </joint>

  <joint name="base_mast_joint" type="continuous">
    <parent link="base_link"/>
    <child link="mast_link"/>
    <axis xyz="0.0 0.0 1.0"/>
    <origin xyz="0.957 0.0 0.5" rpy="0 0 0"/>
<!--    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/> -->
  </joint>

  <joint name="mast_sail_joint" type="fixed">
    <parent link="mast_link"/>
    <child link="sail_link"/>
    <origin xyz="0.0 0.0 1.3" rpy="0 0 0"/>
  </joint>

  <joint name="base_pole_joint" type="continuous">
    <parent link="base_link"/>
    <child link="pole_link"/>
    <axis xyz="0.0 0.0 -1.0"/>
    <origin xyz="0.25 0.0 0.5" rpy="0.0 0.0 0.0"/>
<!--    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/> -->
  </joint>

  <joint name="pole_rudder_joint" type="fixed">
    <parent link="pole_link"/>
    <child link="rudder_link"/>
    <origin xyz="0.0 0.0 -1.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0.0 1.0 0.0"/>
    <origin xyz="0.0 0.0 1.3"/>
    <parent link="mast_link"/>
    <child link="camera_link"/>
  </joint>

  <joint name="imu_joint" type="fixed">
    <axis xyz="1.0 0.0 0.0"/>
    <origin xyz="0.800 0.0 0.5"/>
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>

<!-- TRANSMISSION ELEMENTS -->
<!-- Based on format described in: https://wiki.ros.org/urdf/XML/Transmission -->
  <transmission name="sail_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_mast_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="mast_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="rudder_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="base_pole_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="rudder_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<!-- SENSORS -->
<!-- Camera -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>1920</width>
          <height>1080</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>stintboat/camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

<!-- IMU -->
  <gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>__default_topic__</topic>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <topicName>imu</topicName>
        <bodyName>imu_link</bodyName>
        <updateRateHZ>10.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>

<!-- PLUGINS -->
<!-- Plugin: gazebo_ros_control  -->
<!-- Based on format described in: https://github.com/ros-simulation/gazebo_ros_pkgs  -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/stintboat</robotNamespace>
    </plugin>
  </gazebo>
<!-- Plugin: usv_gazebo_dynamics_plugin  -->
<!-- Based on format described in: http://wiki.ros.org/usv_gazebo_plugins -->
  <gazebo>
    <plugin filename="libusv_gazebo_dynamics_plugin.so" name="usv_dynamics_wamv_dynamics_plugin">
      <bodyName>base_link</bodyName>
      <waterLevel>-0.2</waterLevel>
      <waterDensity>997.8</waterDensity>
<!-- Added mass (default values) -->
      <xDotU>0.0</xDotU>
      <yDotV>0.0</yDotV>
      <nDotR>0.0</nDotR>
<!-- Linear and quadratic drag (default values) -->
      <xU>51.30</xU>
      <xUU>72.4</xUU>
      <yV>40.0</yV>
      <yVV>0.0</yVV>
      <zW>500.0</zW>
      <kP>50.0</kP>
      <mQ>50.0</mQ>
      <nR>400.0</nR>
      <nRR>0.0</nRR>
<!-- General dimensions (hull radius pending) -->
      <boatArea>3.674</boatArea>
      <hullRadius>0.213</hullRadius>
      <boatWidth>0.63</boatWidth>
      <boatLength>2.001</boatLength>
<!-- Length discretization, AKA, "N" -->
      <length_n>2</length_n>
      <wave_model>ocean_waves</wave_model>
    </plugin>
  </gazebo>

<!-- Gazebo Buoyancy Plugin -->
  <gazebo>
    <plugin name="BuoyancyPlugin" filename="libBuoyancyPlugin.so">
      <fluid_density>1.225</fluid_density>
    </plugin>
  </gazebo>
